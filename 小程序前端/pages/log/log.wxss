  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.info-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin: 20rpx 0;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
}

.input,
.picker {
  flex: 1;
  padding: 18rpx 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.input:focus,
.picker:focus {
  border-color: #07c160;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
  border-width: 2rpx;
  outline: none;
}

/* 授权登录按钮样式 */
.auth-login-btn {
  width: 80%;
  height: 90rpx;
  background: linear-gradient(135deg, #07c160 0%, #06b258 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 15rpx rgba(7, 193, 96, 0.2);
  transition: all 0.3s ease;
  margin: 20rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.auth-login-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 20rpx rgba(7, 193, 96, 0.25);
}

.auth-login-btn:active {
  transform: translateY(0);
  box-shadow: 0 5rpx 10rpx rgba(7, 193, 96, 0.2);
}

/* 昵称输入框特殊样式 */
.nickname-input {
  border: 2rpx solid #f0f0f0;
  background-color: #fafafa;
}

.nickname-input:focus {
  border-color: #07c160;
  background-color: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}

