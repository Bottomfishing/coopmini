page {
  background: #f8f9fa;
}

/* 容器样式 */
.container {
  margin: 20rpx 20rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.prompt {
  text-align: center;
  padding: 30rpx 20rpx;
  font-size: 32rpx;
  color: #333333;
  background-color: #f0f2f5;
  border-radius: 10rpx;
  margin: 20rpx 0;
}

.login {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 3rpx 15rpx rgba(0, 0, 0, 0.05);
}

.avatar-container {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.avatar-btn {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f5f5f5 0%, #e8f5e9 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  border: 2rpx dashed #ddd;
  box-shadow: 0 8rpx 15rpx rgba(7, 193, 96, 0.1);
  transition: all 0.3s ease;
}

.avatar-btn:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 10rpx rgba(7, 193, 96, 0.08);
}

