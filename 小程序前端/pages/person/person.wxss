page {
    background: #f8f9fa;
}

/* 容器样式 */
.container {
    margin: 20rpx 20rpx 0;
}

/* 用户框样式 */
.userbox {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 20rpx 20rpx 20rpx 0;
    background-color: #ffffff;
    border-radius: 20rpx;
    box-shadow: 0 3rpx 4rpx rgba(0, 0, 0, 0.02);
}

/* 用户头像样式 */
.pic {
    width: 120rpx;
    height: 120rpx;
    border-radius: 40%;
    margin: 0 30rpx 0 20rpx;
}

/* 用户中心样式 */
.usercenter {
    margin-left: 0rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 15rpx;
}

.info-item {
    display: flex;
    font-size: 28rpx;
}

.info-label {
    width: 120rpx;
    color: #666;
}

.info-value {
    flex: 1;
    color: #333;
}

/* 标题样式 */
.title {
    font-size: 35rpx;
    font-weight: 600;
    color: #000;
}

/* 个性签名样式 */
.person_text {
    font-size: 28rpx;
    font-weight: 400;
    padding-top: 10rpx;
    color: #999999;
}

/* 常用功能项样式 */
.common_item {
    display: flex;
    justify-content: space-around;
    margin-bottom: 20rpx;
    background-color: #ffffff;
    border-radius: 20rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
    box-shadow: 0 3rpx 4rpx rgba(0, 0, 0, 0.05);
}

/* 常用功能子项样式 */
.common_item image {
    width: 100rpx;
    height: 100rpx;
    padding: 10rpx 10rpx 0 10rpx;
    border-radius: 50%;
}

/* 常用功能子项样式 */
.item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.item image {
    width: 80rpx;
    height: 80rpx;
    margin: 0 0 10rpx 0;
}

/* 常用功能子项描述样式 */
.item_dec {
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 常用功能子项标题样式 */
.item_title {
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
}

/* 常用功能子项文本样式 */
.item_text {
    font-size: 20rpx;
    color: #666;
}

/* 退出登录按钮样式 */
.btn {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 25rpx;
    width: 100%;
}

.qitelog {
    background-color: #ffffff;
    color: #000000;
    padding: 20rpx 40rpx;
    border-radius: 10rpx;
    cursor: pointer;
    width: 100%;
    box-sizing: border-box;
    text-align: center;
}

.qitelog:hover {
    background-color: #f1f1f1;
}

/* 页脚样式 */
.footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
    margin-top: 50rpx;
}

.footer-item {
    font-size: 24rpx;
    /* 设置文字大小 */
    margin-bottom: 10rpx;
    color: #999;
}

.phone-number {
    color: #67b0fe;
    /* 设置电话号码的颜色 */
}

.license-links {
    display: flex;
    align-items: center;
}

.license-link {
    text-align: center;
    font-size: 24rpx;
    /* 设置文字大小 */
    color: #999;
}

.li {
    color: #999;
    font-size: 24rpx;
}