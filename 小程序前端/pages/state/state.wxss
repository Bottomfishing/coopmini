/* 订单状态部分样式 */
.order-status {
    margin-top: 20rpx;
    display: flex;
    justify-content: space-around;
    padding: 20rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}

.status-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.status-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 10rpx;
}

.status-icon image {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.status-text text {
    font-size: 28rpx;
    color: #333;
}

